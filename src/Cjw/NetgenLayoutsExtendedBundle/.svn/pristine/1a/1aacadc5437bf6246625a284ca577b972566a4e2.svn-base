{% extends '@nglayouts/block/block.html.twig' %}

{% block content %}
    {% set image_path = block.dynamicParameter('image_path') %}
    {% set align = block.dynamicParameter('align') %}

    {% if image_path is not null and image_path != 'no_image_defined' %}
        <div class="spacer {{ align }} image">
            <img src="{{ asset( image_path ) }}" alt="" />
        </div>
    {% endif %}
{% endblock %}
