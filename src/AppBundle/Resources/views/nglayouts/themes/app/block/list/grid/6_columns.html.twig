{% set use_clearfixes = false %}

<div class="col-sm-4 col-md-3 col-lg-2 col-{{ block.itemViewType }}">
   {{ nglayouts_render_result(result, null, block.itemViewType) }}
</div>

{% if use_clearfixes|default %}
    {% if loop.index0 % 3 == 2 %}<div class="clearfix visible-sm-block"></div>{% endif %}
    {% if loop.index0 % 4 == 3 %}<div class="clearfix visible-md-block"></div>{% endif %}
    {% if loop.index0 % number_of_columns == 5 %}<div class="clearfix visible-lg-block"></div>{% endif %}
{% endif %}
