{% import '@ezdesign/parts/slide.html.twig' as slide %}
{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}

{% set title = content_fields.title(content) %}

<div class="slick-slide">
    <a href="{{ asset(ng_image_alias(content.fields.image, 'i1920').uri) }}" title="{{ title }}"
       data-fancybox="{{ view_type }}">
        <img src="{{ ng_image_alias( content.fields.image, 'i900_16-9').uri }}"
             alt="{% if content.fields.image.value.alternativeText != '' %}
                  {{ content.fields.image.value.alternativeText }}{% else %}{{ content.name }}{% endif %}"/>
        {#
        {% if content.fields.caption is defined and not content.fields.caption.empty %}
            {{ ng_render_field(content.fields.caption) }}
        {% endif %}
        #}
    </a>
</div>
