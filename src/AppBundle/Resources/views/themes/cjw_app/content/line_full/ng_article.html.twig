{#                        <a href="{{ path(location) }}">{{ 'cjwsite.content.links.read_more'|trans }}</a>#}
{#                    </div>#}
{#                {% endif %}#}
{#            </div>#}

        {% endblock %}

    </article>

{% endblock %}
