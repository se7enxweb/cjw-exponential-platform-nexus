{% extends nglayouts.layoutTemplate %}

{% set show_path = false %}

{% block content %}
    <div class="view-type view-type-{{ view_type }} ng_frontpage clearfix">
        {% block content_header %}
            <header class="full-page-header full-form-header">
            <div class="container">
                {% block title %}
                    <div class="landing-page-title-container landing-page-home-title">
                        <h1 class="title landing-page-title">
                            {{ ng_render_field(content.fields.title) }}

                            {% if content.fields.subtitle is defined %}
                                <small>{{ ng_render_field(content.fields.subtitle) }}</small>
                            {% endif %}

                        </h1>

{#                        <hr class="dotted">#}

                        {#{% if not content.fields.full_intro.empty %}
                            <div class="full-page-intro">
                                {{ ng_render_field(content.fields.full_intro) }}
                            </div>
                        {% endif %}#}
                    </div>
                {% endblock %}

                {% block intro %}
                    {% if content.fields.teaser_intro is defined and
                          not content.fields.teaser_intro.empty %}
                        <div class="{#full-page-intro #}teaser_intro">
                                {{ ng_render_field(content.fields.teaser_intro) }}
                        </div>
                    {% endif %}
                {% endblock %}
            </div>
            </header>
        {% endblock %}
    </div>
{% endblock %}
