{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import '@ezdesign/parts/slide.html.twig' as slide %}
{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}

<figure class="image-wrapper" style="width:{{ width_item }}%">
    {#    {% set title = content_fields.title(content) %} #}
    {% if content.fields.image.value.alternativeText is defined and content.fields.image.value.alternativeText != '' %}
        {% set title = content.fields.image.value.alternativeText %}
    {% else %}
        {% set title = content.fields.image.empty %}
    {% endif %}

    {% if not content.fields.image.empty and ng_image_alias(content.fields.image, 'i1200').uri is defined %}
        <a href="{{ asset(ng_image_alias(content.fields.image, 'i1200').uri) }}"
           title="{{ title }}" data-caption="{{ title }}" data-fancybox="embed" {#="{{ view_type }}"#} {#alt="{{ content.fields.image.value.alternativeText }}"#}>
            {{ slide.image(content, null, 'i770_16-9') }}
        </a>
    {% endif %}
</figure>
