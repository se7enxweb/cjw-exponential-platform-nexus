<div class="container">
    <div class="bookingbar">
        <form action="service/booking" method="post" target="_blank">
            <div class="form-row" style="margin: 0 -15px;">
                <div class="col-input col-6 col-sm-6 col-md-3 col-lg-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Ab</div>
                        </div>

                        <input type="text" name="anreise" class="form-control datepicker from" placeholder="Anreise" />
                    </div>
                </div>

                <div class="col-input col-6 col-sm-6 col-md-3 col-lg-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Bis</div>
                        </div>

                        <input type="text" name="abreise" class="form-control datepicker to" placeholder="Abreise" />
                    </div>
                </div>

                <div class="col-input col-6 col-sm-6 col-md-3 col-lg-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Erwachsene</div>
                        </div>

                        <input type="text" name="adults" class="form-control" placeholder="2" />
                    </div>
                </div>

                <div class="col-input col-6 col-sm-6 col-md-3 col-lg-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Kinder</div>
                        </div>

                        <input type="text" name="children" class="form-control" placeholder="0" />
                    </div>
                </div>

                <div class="col-input col-md-3 d-none d-md-block d-lg-none"></div>

                <div class="col-input col-6 col-sm-6 col-md-3 col-lg-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Art</div>
                        </div>

                        <select class="form-control" name="roomtypes[]" size="1">
                            <option value="p_1">Ferienwohnung / App.</option>
                            <option value="p_2">Ferienhaus</option>
                            <option value="g_1">Hotel</option>
                            <option value="g_6">Pension</option>
                        </select>
                    </div>
                </div>

                <div class="col-input col-6 col-sm-6 col-md-3 col-lg-2">
                    <input type="submit" class="btn btn-text" name="SubmitBooking" value="Unterkunft finden" />
                </div>

                <div class="col-input col-md-3 d-none d-md-block d-lg-none"></div>
            </div>
        </form>
    </div>
</div>
